<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>Slinks</title>

  <link rel="icon" type="image/x-icon" href="/static/icon.svg">
  <link rel="stylesheet" href="/static/styles/index.css">
  <script src="https://unpkg.com/htmx.org@2.0.2"></script>
</head>

<body>
  <main id="main">
    <form hx-post="/slinks" hx-swap="outerHTML" hx-target="#response" method="post"
      hx-disabled-elt="#url-input, #submit">
      <label for="url">Input URL</label>

      <div class="input" id="input">
        <input type="url" name="url" id="url-input" required>
        <button id="submit" type="submit">Enter</button>
      </div>
    </form>

    <div id="response" class="response">
      <p>Your short link will be here</p>
      <button class="copy-button" disabled><img src="/static/images/copy.icon.svg" alt="copy-icon"></button>
    </div>
  </main>
</body>

<script>
  async function writeToClipboard(text) {
    await navigator.clipboard.writeText(text);

    // remove the alert if already exists
    closeAlert();

    const input = document.getElementById("main");
    input.insertAdjacentHTML("beforeend", `
      <div id="alert">
        <p>Copied to clipboard!</p>
        <button class="close-button" onclick="closeAlert()"><img src="/static/images/remove.icon.svg" alt="close-icon" />
      </div>
    `);
  }

  function closeAlert() {
    const alert = document.getElementById("alert");
    if (alert !== null) {
      alert.remove();
    }
  }
</script>

</html>